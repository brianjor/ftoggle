{
  "name": "ftoggle-api",
  "module": "./src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --hot ./src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "typecheck": "tsc",
    "db": "docker compose up -d",
    "migrations:gen": "drizzle-kit generate:pg",
    "migrations:run": "bun run ./src/db/migrate.ts",
    "studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.20.6",
    "tsc": "^2.0.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@lucia-auth/adapter-postgresql": "^2.0.2",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "elysia": "^0.7.30",
    "lucia": "^2.7.4",
    "pg": "^8.11.3",
    "postgres": "^3.4.3"
  }
}
